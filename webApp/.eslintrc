{
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "node_modules",
    "build"
  ],
  "plugins": [
    "import",
    "react",
    "formatjs",
    "@stylistic",
    "@stylistic/ts",
    "@stylistic/jsx"
  ],
  "rules": {
    "formatjs/prefer-formatted-message": [
      "warn"
    ],
    "formatjs/no-useless-message": [
      "error"
    ],
    "formatjs/no-id": [
      "error"
    ],
    "formatjs/no-invalid-icu": [
      "error"
    ],
    "formatjs/no-multiple-whitespaces": [
      "warn"
    ],
    "formatjs/no-multiple-plurals": [
      "warn"
    ],
    "formatjs/no-offset": [
      "warn"
    ],
    "formatjs/no-complex-selectors": [
      "warn"
    ],
    "formatjs/enforce-default-message": [
      "error",
      "literal"
    ],
    "formatjs/enforce-placeholders": [
      "error"
    ],
    "formatjs/enforce-description": [
      "warn",
      "literal"
    ],
    "formatjs/no-literal-string-in-jsx": [
      "warn"
    ],
    "no-console": [
      "warn"
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "type",
          "builtin",
          "external",
          "index",
          "object",
          "parent",
          "sibling",
          "internal"
        ]
      }
    ],
    "@stylistic/no-trailing-spaces": [
      "error"
    ],
    "indent": [
      "error",
      2
    ],
    "@stylistic/indent": [
      "error",
      2
    ],
    "@stylistic/jsx/jsx-indent": [
      "error",
      2,
      {
        "checkAttributes": true,
        "indentLogicalExpressions": true
      }
    ],
    "no-duplicate-imports": [
      "error"
    ],
    "@stylistic/quotes": [
      "error",
      "double"
    ],
    "react/forbid-dom-props": [
      "error",
      {
        "forbid": [
          "style"
        ]
      }
    ],
    "react/forbid-component-props": [
      "error",
      {
        "forbid": [
          "style"
        ]
      }
    ]
  }
}