{
  "name": "billpath",
  "version": "1.0.0-preview",
  "description": "Finance tracker, under development, trying to make it awesome :)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Andrei15193/BillPath.git"
  },
  "author": "Andrei15193",
  "license": "GPL-3.0",
  "homepage": "https://github.com/Andrei15193/BillPath#readme",
  "bugs": {
    "url": "https://github.com/Andrei15193/BillPath/issues"
  },
  "keywords": [
    "react",
    "graphql",
    "model-view-viewmodel",
    "mvvm",
    "fluentui",
    "finance-management"
  ],
  "main": "index.ts",
  "scripts": {
    "dev": "webpack serve --mode development",
    "release": "webpack --mode production",
    "test": "jest"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.42.0",
    "@fluentui/react-icons": "^2.0.223",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reset-css": "^5.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.1",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/parser": "^6.13.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/_config/tests/fileMock.ts",
      "\\.(css|less)$": "<rootDir>/_config/tests/styleMock.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/_config/tests/setupTests.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules /**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
